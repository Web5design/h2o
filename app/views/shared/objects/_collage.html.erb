<% cache "collage-list-object-#{hit.stored(:id)}" do %>
<li class="listitem listitem<%= collage.id %>" id="listitem_collage<%= collage.id %>" data-itemid="<%= collage.id %>">
  <a href="#" class="tooltip list-icon icon icon-collage" title="Collage"></a>
  <div class="details">
    <h3>
      <%= link_to collage.name, collage_path(collage), :class => "title" %>
    </h3>
    <p>
      <% if hit.stored(:author_id).present? -%>
      <% if hit.stored(:root_author_id).present? && hit.stored(:root_author_id) != hit.stored(:author_id) -%>
      Original Creator: <%= link_to hit.stored(:root_author_display), "/users/#{hit.stored(:root_author_id)}" %> |
      Current Version: <%= link_to hit.stored(:author_display), "/users/#{hit.stored(:author_id)}" %> |
      <% else -%>
      <%= link_to hit.stored(:author_display), "/users/#{hit.stored(:author_id)}" %> |
      <% end -%>
      <% end -%>
      <% if collage.words_shown.present? -%>
      <%= number_with_delimiter(collage.words_shown, :delimiter => ',') %> Words |
      <% end -%>
      <%= collage.updated_at.strftime("%B %d, %Y") %>
      <% if false -%>Taught at [school] (if it hasn't been taught anywhere, don't display this field) <% end -%>
    </p>
  </div>

  <div class="right_details">
  <div class="barcode_outer">
    <%= render :partial => "shared/barcode", :locals => { :object => collage } %>
  </div>
  <div class="controls">
    <%= link_to raw('<span class="icon icon-read"></span>READ'), collage, :class => "action read-action" %>
    <a href="<%= prepare_copy_collage_path(collage) %>" class="remix-action link-copy"><span class="icon icon-remix"></span>REMIX</a>
    <a data-item_id="<%= collage.id %>" data-bookmarktype="item_collage" data-type="collage" class="link-add" href="#"><span class="icon icon-add"></span>ADD</a>
    <%= link_to raw('<span class="icon icon-favorite"></span>BOOKMARK'), '#',
      :class => "link-bookmark bookmark-action", 
      "data-itemid" => collage.id,
      "data-type" => "collage" %>
  </div>
  </div>

  <div class="clear"></div>
</li>
<% end -%>
